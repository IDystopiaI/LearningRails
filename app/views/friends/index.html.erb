<%# class="table table-striped table-bordered table-hover" %>
  <table class="table table-striped table-bordered table-hover" >
    <thead class="table-dark">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Twitter</th>
        <th>Show</th>
        <th>Edit</th>
        <th>Delete</th>
        <%# add delete  %>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>

        <tr class="align-middle">
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.email %></td>
          <td><%= link_to "Show", friend %></td>
          <td><%= link_to "Edit", edit_friend_path(friend) %></td>
          <td><%= button_to "Delete", friend, method: :delete, class:"btn btn-danger" %></td>
        </tr>

       <%# <%= render "friend" %>
        <%# <p>
          <%= link_to "Show this friend", friend %>
        <%# </p> %>
      <% end %>
    </tbody>
</table>
<%= link_to "Add Friend", new_friend_path, class:"btn btn-primary" %>
