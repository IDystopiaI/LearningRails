<p style="color: green"><%= notice %></p>

<h1>Friends</h1>


  <table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark">
      <tr>
        <th>Name</th>
        <th>Phone</th>
        <th>Email</th>
        <th>Twitter</th>
        <th>Show Friend</th>
      </tr>
    </thead>

    <tbody>
      <% @friends.each do |friend| %>

        <tr>
          <td>
            <%= link_to friend.first_name + ' ' + friend.last_name, friend %>
          </td>
          <td><%= friend.phone %></td>
          <td><%= friend.twitter %></td>
          <td><%= friend.email %></td>
          <td><%= link_to "Show this friend", friend %></td>
        </tr>

       <%# <%= render friend %>
        <%# <p>
          <%= link_to "Show this friend", friend %>
        <%# </p> %>
      <% end %>
    </tbody>
</table>
